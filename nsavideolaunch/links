function getip(json){
    var ipElement = document.getElementsByName('member[ip_address]')[0],
        uaElement = document.getElementsByName('member[user_agent]')[0];

    if (!ipElement) {
        return;
    }

    ipElement.value = json.ip;
    uaElement.value = navigator.userAgent;
}
</script>
